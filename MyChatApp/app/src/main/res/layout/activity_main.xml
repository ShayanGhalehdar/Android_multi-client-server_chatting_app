<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/Main_connectTo"
        android:layout_width="275dp"
        android:layout_height="67dp"
        android:ems="10"
        android:hint="@string/main_connectUsername"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Main_goToChatB"
        android:layout_width="173dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:onClick="chatWithUserHandler"
        android:text="@string/main_talkB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Main_connectTo" />
</androidx.constraintlayout.widget.ConstraintLayout>